<!DOCTYPE html>
<html>
<head>
  <title>Gâche pas j'ai faim</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
  <header>
    <% include ./partials/header %>
  </header>
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner center">
      <div class="item active">
        <img src="http://www.richardferrand.fr/wp-content/uploads/2016/01/image-gaspillage-alimentaire.jpg" alt="gaspillage" style="width:100%; height:30em;">
      </div>

      <div class="item">
        <img src="http://static.lexpress.fr/medias_9607/w_1815,h_1362,c_crop,x_0,y_0/w_605,h_350,c_fill,g_north/v1402585449/les-sdf-ou-precaires-souffrent-de-la-faim-en-france_4919041.jpg" alt="sdf" style="width:100%; height:30em;">
      </div>
      <div class="item">
        <img src="http://www.a3econsulting.com/wp-content/uploads/2016/06/le-gaspillage-alimentaire-coute-750-milliards.jpg" alt="gaspillage" style="width:100%; height:30em;">
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="container">
    <form action="/" method="post" class="text-center">
      <input type="text" name="donorlastname" id="donorlastname" placeholder="Nom"><br>
      <input type="text" name="donorfirstname" id="donorfirstname" placeholder="Prénom"><br>
      <input type="text" name="donorphone" id="donorphone" placeholder="Télépone"><br>
      <input type="text" name="donoraddress" id="donoraddress" placeholder="Adresse"><br>
      <input type="text" name="donorhour" id="donorhour" placeholder="Heure de passage"><br>
      <input type="mail" name="donormail" id="donormail" placeholder="E-mail"><br>
      <textarea name="donorcomment" id="donorcomment" placeholder="Commentaire"></textarea><br>
      <button type="submit" class="btn btn-danger">Ajouter</button>
    </form>
  </div>
  <footer>
    <% include ./partials/footer %>
  </footer>
</body>
</html>